  <section>
    <h1>TOALLAS HIGUIENICAS</h1>
    <div>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">nombre del producto</th>
            <th scope="col">precio</th>
          </tr>
        </thead>
        <tbody>
          {{#each tablaCarrito}}
          <tr>
            <td>{{nombreProducto}}</th>
            <td>{{precioProducto}}</td>
            <td>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Toalla1">
                Comprar
              </button>
              <!-- Modal -->
              <div class="modal fade" id="Toalla1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">Terminos y condiciones </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form action="/customer/aggPedido" method="post">
                        <div class="form-group">
                          <select class="form-control" name="id_producto">
                            <option value="{{id_producto}}">{{nombreProducto}}</option>
                          </select>
                        </div>
                        <div>
                          <input type="number" name="cantidad">
                        </div>
                        <div class="form-group">
                          <button type="submit">Agregar</button>
                        </div>
                      </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    </div>
                  </div>
                </div>
              </div>
            </td>
            <!--fin del modal-->
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
