        <section>
          <form action="#" method="POST">
            <div class="form-group">
              <h1>Agregar Usuario</h1>
            </div>
            <div id="form-group">
              <label>Nombre del usuario</label>
              <input value="" class="form-control" type="text" placeholder="Digite el nombre del usuario" name="nombreUsuario" />
            </div>
            <div id="form-group">
              <label>Apellido del usuario</label>
              <input value="" class="form-control" type="text" placeholder="Digite el apellido del usuario" name="apellidoUsuario" />
            </div>
            <div id="form-group">
              <label>Edad del usuario</label>
              <input value="" class="form-control" type="number" placeholder="Digite la edad del usuario" name="edadUsuario" />
            </div>
            <div class="form-group">
              <label>Cedula del usuario</label>
              <input value="" class="form-control" type="number" placeholder="Digite la cedula del usuario" name="cedulaUsuario" />
            </div>
            <div class="form-group">
              <label>Telefono Usuario</label>
              <input value="" class="form-control" type="number"placeholder="Digite el numero de telefono del usuario" name="telefonoUsuario" />
            </div>
            <div class="form-group">
              <label>Direccion</label>
              <input value="" class="form-control" type="text" placeholder="Digite direccion de residencia" name="direccion" />
            </div>
            <div class="form-group">
              <label>Correo</label>
              <input value="" class="form-control" type="email" placeholder="Digite el correo del usuario" name="correo" />
            </div>
            <div class="form-group">
              <label>Contraseña</label>
              <input value="" class="form-control" type="password" placeholder="Digite la contraseña" name="contra" />
            </div>
            <div class="form-group">
                <select class="form-control" name="rol">
                  <option value="1">Adminitrador</option>
                  <option value="2">Cliente</option>
                  <option value="3">Empleado</option>
                </select>
            </div>
            <div class="form-group">  
              <button type="submit" class="btn btn-success btn-block">agregar</button>
            </div>
          </form> 
          </section>
        <section>
        <table class="table table-dark" id="tabla">
        <tr>
            <td><img src="/img/cliente1.png" alt="" class="Presiden"></td>
            <td><img src="/img/cliente2.png" alt="" class="Presiden"></td>
            <td><img src="/img/cliente3.png" alt="" class="Presiden"></td>
        </tr>
        
        <tr bgcolor="greenyellow">
            <strong>
            <td class="texto mx-auto">#</td>
            <td class="texto mx-auto">Nombre del usuario</td>
            <td class="texto mx-auto">Apellido del usuario</td>
            <td class="texto mx-auto">Edad del usuario</td>
            <td class="texto mx-auto">Cedula del usuario</td>
            <td class="texto mx-auto">Telefono del usuario</td>
            <td class="texto mx-auto">Direccion</td>
            <td class="texto mx-auto">Correo del usuario</td>
            <td class="texto mx-auto">Contraseña del Usuario</td>
            </strong>
        </tr>
        {{#each TablaUsuario}}
        <tr>
          <strong>
            <td>{{id_usuario}}</td>
            <td>{{nombreUsuario}}</td>
            <td>{{apellidoUsuario}}</td>
            <td>{{edadUsuario}}</td>
            <td>{{cedulaUsuario}}</td>
            <td>{{telefonoUsuario}}</td>
            <td>{{direccion}}</td>
            <td>{{correo}}</td>
            <td>{{contra}}</td>
            <td>
              <a href="/admint_venta/eliminar/{{id_usuario}}" class="Presiden btn-danger">Eliminar</a>
            </td>
          </strong>
        </tr>
        {{/each}}
